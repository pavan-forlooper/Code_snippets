
int* BubbleSort(int* arr,int size)
{
    int swap;
 
    while(size>0)
    {
        for(int i=0;i<size-1;i++)
        {
            if(arr[i]>arr[i+1])
            {
                swap=arr[i];
                arr[i]=arr[i+1];
                arr[i+1]=swap;
            }
        }
        --size;
    }
 
    return arr;
}
 
